<div class="login">
  <%= form_with(model: attribute, local: true) do |form| %>
    <% if attribute.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(attribute.errors.count, "error") %> prohibited this attribute from being saved:</h2>

        <ul>
          <% attribute.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :type_id %>
      <%= form.hidden_field :type_id, value: @attribute_type_id %>
    </div>

    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="field">
      <%= form.label :numerical %>
      <%= form.text_field :numerical %>
    </div>

    <div class="field">
      <%= attribute_avatar(attribute) %>
      <%= form.label :icon %>
      <%= form.file_field :icon %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>
