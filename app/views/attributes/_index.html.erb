<div class="modal-header">
  <h4 class="modal-title"><h1>List of Attributes</h1></h4>
  <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>

<div class="modal-body">
  <p id="notice"><%= notice %></p>

  <table>
    <thead>
    <tr>
      <th>Name</th>
      <th>Numerical</th>
      <th>Icon</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @attributes.each do |attribute| %>
      <%= render attribute %>
    <% end %>
    </tbody>
  </table>

  <br>
  <%= link_to 'New Attribute', new_attribute_path(:type_id => @attribute_type_id), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window-new-attribute'} %>
</div>



<div id="modal-window-new-attribute" class="modal fade" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered max-width-1000">
    <div class="modal-content"></div>
  </div>
</div>


<div class="modal-footer">
  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
</div>



