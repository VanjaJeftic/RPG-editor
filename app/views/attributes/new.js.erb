$('#modal-window-new-attribute').find(".modal-content").html("<%= j (render 'new', attribute: @attribute) %>");
$('#modal-window-new-attribute').modal('show');

function readURL(input) {
    if (input.files && input.files[0]) {
        var reader = new FileReader();
        reader.onload = function (e) {
            $('#image-attribute-append').attr('src', e.target.result);
        }
        reader.readAsDataURL(input.files[0]);
    }
}

$("#attribute_icon").change(function(){
    readURL(this);
});

$("#close-button-new-attribute").click(function(e){
    $('#modal-window-new-attribute').modal('hide');
});

$('#submit-button-attribute').click(function(){
    if($('#attribute_name').val() == ''){
        var $messageDiv = $('#message-name-attr');
        $messageDiv.show().html('Name can not be left blank!');
    }else{
        $('#message-name').hide();
    }
    if($('#attribute_numerical').val() == ''){
        var $messageDiv = $('#message-numerical'); // get the reference of the div
        $messageDiv.show().html('Numerical value can not be left blank!');
    }else{
        $('#message-numerical').hide();
    }
    if($('#attribute_name').val() != '' && $('#attribute_numerical').val() != ''){
        $('#modal-window-new-attribute').modal('hide');
    }
});



