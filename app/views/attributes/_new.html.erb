<div class="modal-header">
  <h4 class="modal-title">Create New Attribute</h4>
</div>

<div class="modal-body">
  <div class="center">
      <%= form_for(@attribute, remote: true) do |form| %>

      <div class="login">
        <% if @attribute.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@attribute.errors.count, "error") %> prohibited this attribute from being saved:</h2>

            <ul>
              <% @attribute.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= form.hidden_field :type_id, value: @attribute_type_id %>
        </div>

        <div class="field">
          <%= form.label :name %>
          <%= form.text_field :name %>
        </div>

        <div class="red-error-message" id="message-name"></div>

        <div class="field">
          <%= form.label :numerical, 'Numerical value' %>
          <%= form.number_field :numerical %>
        </div>

        <div class="red-error-message" id="message-numerical"></div>

        <div class="field limit_image", id="image">
          <%= attribute_avatar(attribute) %>
          <%= form.label :icon %>
          <%= form.file_field :icon %>
          <img id="blah" src="#" />
        </div>

        <div class="red-error-message" id="message-icon"></div>

        <div class="actions style-button-create">
          <button id="submit-button">
          <%= form.submit %>
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="modal-footer">
  <button type="button" class="btn btn-secondary" id="close-button-new-attribute">Close</button>
</div>
