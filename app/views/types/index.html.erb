<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>


<div class="header">
  <div class="screen-page">
    <h1>RPG game editor</h1>
      <h2>Welcome <%= current_user.username %>!</h2>
      <div class="button-right">
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "sign-out-type-button" %>
      </div>
  </div>
</div>

<div class="content">
  <section class="content">
    <p id="notice"><%= notice %></p>
    <p>
    <div class="inner highlight-red", id="error-message"></div>
    </p>
    <div class="container">
      <div class="page-header">
      <span >
    <%= link_to 'Show all created types', types_path(:show_all => true), class: "all-type-button"%>
        <%= link_to 'Show types you created', types_path(:show_all => false), class: "all-type-button"%>
    </span>
        <br>
        <br>
        <h1>Character Types</h1>
      </div>
    </div>

    <%= paginate @types%>

    <div class="bottom-margin">
      <table id="types_table">
        <thead>
        <tr>
          <th>Name</th>
          <th>Avatar</th>
          <th colspan="4"></th>
        </tr>
        </thead>

        <% @types.each do |type| %>
          <%= render type %>
        <% end %>
      </table>

      <%= paginate @types%>
    </div>
    <br>
    <%= link_to 'Create New Type', new_type_path, {:remote => true, 'data-toggle'=> "modal", 'data-target'=> "#myModal", 'class'=> "new-type-button" } %>
    <%= render 'modals' %>

</section>

</div>



















