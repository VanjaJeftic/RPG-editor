<p id="notice"><%= notice %></p>

<div class="container">
  <div class="page-header">
    <h1>Types</h1>
  </div>
</div>

<div class="container">
  <table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td><%= type.name %></td>
        <td><%= image_tag(type.image, style: "width: 10%") if type.image.attached?%></td>
        <td><%= link_to 'Show', type %></td>
        <td><%= link_to 'Edit', edit_type_path(type) %></td>
        <td><%= link_to 'Destroy', type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>

<br>

<%= link_to 'New Type', new_type_path %>
