<div class="login">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Name:</strong>
    <%= @type.name %>
  </p>
  <p>
    <strong>Avatar:</strong>
    <div style="width:200px; height: auto">
    <%= image_tag(@type.image, style: "width: 100%") if @type.image.attached? %>
    </div>
  </p>

  <%= link_to 'Edit', edit_type_path(@type) %> |
  <%= link_to 'Back', root_path %>
</div>
