<tr id="<%= dom_id type %>">
  <td><%= type.name %></td>
  <td><%= image_tag(type.image, style: "width: 5%") if type.image.attached?%></td>
  <td><%= link_to 'Edit', edit_type_path(type), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'}  %></td>
  <td><%= link_to 'Destroy', type, method: :delete, data: { confirm: 'Are you sure?', remote: true }, class: "delete" %></td>
  <td><%= link_to 'List of Attributes', attributes_path(@types, :type_id => type.id) %></td>
</tr>
