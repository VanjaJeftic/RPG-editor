$('#myModal').find(".modal-content").html("<%= j (render 'new', type: @type) %>");
$('#myModal').modal('show');

function readURL(input) {
    if (input.files && input.files[0]) {
        var reader = new FileReader();
        reader.onload = function (e) {
            $('#new-image-type-added').attr('src', e.target.result);
        }
        reader.readAsDataURL(input.files[0]);
    }
}

$("#type_image").change(function(){
    readURL(this);
});

$("#close-button-new-type").click(function(e){
    $('#myModal').modal('hide');
});

$('#submit-button').click(function(){
    if($('#name-field').val() == ''){
        var $messageDiv = $('#message-name');
        $messageDiv.show().html('Name can not be left blank!');
    }else{
        $('#message-name').hide();
    }
    if($('#name-field').val() != '' ){
        $('#myModal').modal('hide');

    }
});