$('#types_table').prepend('<%= j render partial: "type", locals: {type: @type} %>');

var rowCount = $('#attributes_table tr').length;
if (rowCount > 5){
    $('#types_table tr').last().hide();
}

var url = window.location.href;     // Returns full URL (https://example.com/path/example.html)

if(url == 'http://localhost:3000/types' || url == 'http://localhost:3000/types?show_all=false' ){
    $.ajax({url: "/types", type: "GET"})
}

setTimeout(function() {
  $('tr').eq(1).addClass("highlight");
  setTimeout(function() {
      $( "tr" ).removeClass('highlight');
  }, 3000);
}, 100);