<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>

<% if !current_user %>
  <div class="header">
    <div class="screen-page">
        <h1>Welcome to RPG Game Editor!</h1>
        <h2>Please sign in or sign up: </h2>
        <div class="button-right">
          <%= link_to "Sign Up", new_user_registration_path, class: "sign-in-type-button" %>
        </div> </br>
        <div class="button-right">
          <%= link_to "Sign In", new_user_session_path, class: "sign-up-type-button" %>
        </div> </br>
    </div>
  </div>
  <div id="notice-id" class="red-collor-letter">
    <%= notice %>
  </div>
<% else %>
  <div class="header">
    <div class="screen-page">
        <div class="button-right">
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "sign-out-type-button" %>
        </div>
        <h1>Welcome to RPG Game Editor!</h1>
        <h2><%= current_user.username %>!</h2>
        <div class="button-right">
          <%= link_to "List of Created Types", types_path, class: "see-all-type-button" %>
        </div>
    </div>
  </div>
    </br>
  </div>
  <div class="hero-image">
    <p id="notice"><%= notice %></p>
  </br> </br> </br>
    <div>
      <%= link_to "Update Your Information", edit_user_registration_path, class: "update-info-user-button" %>
    </div>
  </div>
<% end %>

<script>
    setTimeout(function() {
      $("#notice-id").hide();
    }, 6000);
</script>
